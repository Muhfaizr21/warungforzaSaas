# ============================================
# FORZASHOP BACKEND CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=forza
DB_PORT=5432
DB_SSLMODE=disable
DB_TIMEZONE=Asia/Jakarta

# Server
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-here

# App URL (for callbacks and webhooks)
# Use ngrok URL for local development with webhooks
APP_URL=http://localhost:5000

# ============================================
# PRISMALINK PAYMENT GATEWAY
# ============================================
# Get credentials from: https://dashboard.plink.co.id
# Documentation: https://docs.plink.co.id

# Merchant ID from Prismalink dashboard
PRISMALINK_MERCHANT_ID=your_merchant_id

# API Key ID from Prismalink dashboard
PRISMALINK_KEY_ID=your_key_id

# Secret Key from Prismalink dashboard
PRISMALINK_SECRET_KEY=your_secret_key

# API Base URL
# Sandbox: https://api-staging.plink.co.id/gateway/v2
# Production: https://api.plink.co.id/gateway/v2
PRISMALINK_BASE_URL=https://api-staging.plink.co.id/gateway/v2

# ============================================
# GOOGLE AUTH (OAuth 2.0)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:5000/api/auth/google/callback

# ============================================
# SMTP (Email)
# ============================================
# For Gmail: Enable "Less secure app access" or use App Passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=no-reply@yourstore.com
